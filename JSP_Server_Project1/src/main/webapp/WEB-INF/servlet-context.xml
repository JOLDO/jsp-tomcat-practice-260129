<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd
	http://www.springframework.org/schema/context
	https://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 스프링 mvc 설정을 애너테이션 기반으로 처리합니다.
    @Controller 컨트롤러 역할 ,
    @Service 서비스 역할 ,
    @Repository DAO 역할,
    @Component 일반 객체 타입을 시스템 등록,
    등을 사용함
    -->
    <mvc:annotation-driven></mvc:annotation-driven> <!-- component-scan한 폴더 안의 클래스에서 어노테이션을 작동시킴 -->

    <!-- webapp 아래의 resources , 해당 경로를 전체 설정에 등록하면, -->
    <!-- 웹브라우저에서, 해당 정적 자원에 접근이 가능. -->
    <!-- http://localhost:8080/resources/test.html , 접근이 가능함. -->
    <mvc:resources mapping="/resources/**" location="/resources/"/>
    <!--스프링 mvc에서 제공하는 뷰를 어떻게 처리해서 보여줄지 정하는 기능. -->
    <!-- 뷰파일의 경로 예시: /WEB-INF/views/todo/list.jsp -->
    <!-- 접두어: /WEB-INF/views/, -->
    <!-- 접미어 : .jsp , -->
    <!-- 반복.-->
    <!-- 파일명, 또는 폴더에서 파일명 만 교체해서 사용할 예정.-->
    <!-- todo/list-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">    <!-- 주소 생성방법 -->
        <property name="prefix" value="/WEB-INF/views/"></property> <!-- 접두어 -->
        <property name="suffix" value=".jsp"></property>    <!-- 접미어 -->
    </bean>

    <context:component-scan base-package="com.busanit501.jsp_server_project1.SPRING._1_260213.controller"/> <!-- 해당 폴더의 것을 서블릿으로 보겠다는 뜻 -->

<!--    날짜를 변경해주는 기능을 시스템에 등록해서 이용-->
    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="formatters">
            <set>
                <bean class="com.busanit501.jsp_server_project1.SPRING._1_260213.controller.formatter.LocalDateFormatter"/>
            </set>
        </property>
    </bean>
    <mvc:annotation-driven conversion-service="conversionService" />
</beans>


