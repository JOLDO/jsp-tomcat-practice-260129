<?xml version="1.0" encoding="UTF-8" ?>
<!-- 로그 레벨 계층: (낮음) TRACE < DEBUG < INFO < WARN < ERROR < FATAL (높음)-->
<!--자바 기반의 로깅 프레임 워크 -->
<!-- Appenders , 설정은, 출력 대상을 정의하는 곳, -->
<!--예시, 1) 콘솔, 2) 파일 3) 데이터베이스 기록이 가능. -->
<!--예시, 1) 콘솔 예로 하고 있음.-->
<!-- PatternLayout-->
<!--예시, 콘솔에 출력하는 메세지 형식, 포맷,-->
<!-- %d{HH:mm:ss.SSS} -> 시간 분 초 기록,-->
<!-- [%t] -> 스레드에 동작. 예시) [main]-->
<!-- %-5level -> 로그레벨 표기, 5글자 왼쪽 정렬. 예시) [ INFO],-->
<!-- %logger{36} -> 패키지 명을 기록. -->
<!-- %msg -> 출력 메서지를 기록.-->
<!-- %n -> 줄넘김-->
<!--<Configuration status="WARN">은 프로그램이 실행시 이 xml을 읽고 문제가 설정에 문제가 있는지 warning이상만 로그를 찍어줌-->
<Configuration status="WARN">
    <Appenders>
        <!-- 출력 대상 콘솔-->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}-%msg%n"/>
        </Console>
        <!-- 추가 부분-->
        <!--출력 대상 파일-->
        <File name="FileAppender" fileName= "/Users/joldo/Downloads/3-jsp-practice/JSP_Server_Project1/JSP_Server_Project1/logs/error.log">

            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}-%msg%n"/>
        </File>
        <!-- 추가 부분-->

    </Appenders>
    <Loggers>
        <!-- 추가 부분-->
        <!-- 특정 패키지 명으로 설정가능. -->
        <!--패키지 이름으로 설정해서 기본적으로 debug 레벨로 로그를 파악하고 콘솔에 info레벨로 적어준다.-->
        <!--일반적으로 하위단의 패키지의 로그는 상위단의 루트로 전달되는데 그럼 중복으로 로그가 나오므로 전달하지 않기 위해 additivity를 false로 설정-->
        <Logger name="com.busanit501" level="debug" additivity="false">
            <!-- additivity="false": 상위 로거(Root 로거)로 이벤트를 전달하지 않음-->
<!--            <AppenderRef ref="FileAppender" level="info"/>-->
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <!-- 추가 부분-->
        <Logger name="com.busanit501.jsp_server_project1.SPRING._5_260224.mapper" level="trace" additivity="false">
            <!-- additivity="false": 상위 로거(Root 로거)로 이벤트를 전달하지 않음-->
            <!--            <AppenderRef ref="FileAppender" level="info"/>-->
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- 전체 설정 기본적으로 INFO 이상일 때 로그를 출력하게 설정-->
        <!--<Root level="info">에서 root(프로젝트 전체)는 외부 라이브러리의 로그도 찍어준다(흐름파악 하기위해)-->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>