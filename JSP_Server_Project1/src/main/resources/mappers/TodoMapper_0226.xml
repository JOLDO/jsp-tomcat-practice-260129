    <select id="getTime" resultType="string">
        select now()
    </select>

    <insert id="insert">
        insert into tbl_todo (title, dueDate, writer, finished) values (#{title}, #{dueDate}, #{writer}, #{finished})
    </insert>

    <select id="selectAll" resultType="com.busanit501.jsp_server_project1.SPRING._7_260226.domain.TodoVO_0226">
        select * from tbl_todo order by tno desc
    </select>

    <select id="selectOne" resultType="com.busanit501.jsp_server_project1.SPRING._7_260226.domain.TodoVO_0226">
        select * from tbl_todo where tno = #{tno}
    </select>

    <delete id="delete">
        delete from tbl_todo where tno = #{tno}
    </delete>

    <update id="update">
        update tbl_todo set title = #{title}, dueDate = #{dueDate}, finished = #{finished} where tno = #{tno}
    </update>

